{#
    Bookmarky Web
    Macro
    Modal Device Add
#}
{% macro modal_device_add() %}
<!-- Device add modal -->
<div id="modal-device-add" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Device</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="modal_device_add_name" class="form-control form-control-lg" type="text" placeholder="Name">
                <br>
                <br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="modal-device-add-submit" type="button" class="btn btn-success">Add Device</button>
            </div>
        </div>
    </div>
</div>
<!-- End Device add modal -->
{% endmacro %}